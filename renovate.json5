{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "assignees": ["allenporter"],
  "packageRules": [
    {
      "description": "Minor updates are automatic",
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
}
